ul
  padding 0


body
  background url(public/intro.jpg) no-repeat center center scroll
  text-align center
  font-family "Hiragino Kaku Gothic ProN", Meiryo, sans-serif
  width 65%
  margin 0 auto
  color #eee

  a
    box-shadow  black 2px 2px 0px, black -2px 2px 0px, black 2px -2px 0px, black -2px -2px 0px
    button
      font-weight bold
      border 1px solid #999
      background-color #eee
      padding 13px 0
      color #555
      border-radius 5px
      text-decoration none
      font-size 18px
      cursor pointer
      &:hover
        background-color #CECECE

  header
    height 210px
    text-align center
    text-shadow 0px 0px 7px rgba(255,255,255,1)
    opacity 0.8
    font-weight bold
    h1
      font-family serif
      font-size 120px
      margin-top 50px
      margin-bottom 15px
    h2
      font-size 35px
      margin-top -20px

  div
    p
      font-weight bold
      font-size 22px
      text-shadow  black 2px 2px 0px, black -2px 2px 0px, black 2px -2px 0px, black -2px -2px 0px
    a
      button
        width 110px

  .documents
    margin-top 40px
    h1
      text-shadow  black 2px 2px 0px, black -2px 2px 0px, black 2px -2px 0px, black -2px -2px 0px
    ul
      list-style-type none
      li
        height 80px
        a
          button
            width 145px

  .footer
    p
      font-weight bold
      text-shadow  black 2px 2px 0px, black -2px 2px 0px, black 2px -2px 0px, black -2px -2px 0px

{
  "scripts": {
    "start": "node scripts/translate-docs.js & npm run watch-jade & npm run watch-stylus & npm run watch-translations & npm run server",
    "fetch": "node scripts/fetch-docs.js",
    "translate": "node scripts/translate-docs.js",
    "server": "live-server ./ --ignore=./translations",
    "watch": "npm run watch-jade & npm run watch-stylus",
    "watch-jade": "jade -w templates -o ./",
    "watch-stylus": "stylus stylesheets -w -o ./",
    "watch-translations": "node scripts/watch-translations.js"
  },
  "dependencies": {
    "cheerio": "0.19.0",
    "nightmare": "1.8.2",
    "phantomjs": "1.9.17",
    "browserify": "11.2.0",
    "jade": "1.11.0",
    "live-server": "0.8.2",
    "stylus": "0.52.4",
    "watchify": "3.4.0"
  },
  "devDependencies": {
    "watch": "^0.16.0"
  }
}
